<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionMenuTextColor">@color/ef_white</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
        <item name="colorControlNormal">@color/edittext_line</item>
    </style>

    <style name="TitleTheme">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoginScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_main</item>
    </style>

    <style name="TitleItemTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor" tools:ignore="NewApi">false</item>
        <item name="android:dropDownVerticalOffset">-10.0dip</item>
        <item name="android:dropDownHorizontalOffset">16dp</item>

        <item name="android:popupBackground">@drawable/background_menu_overflow</item>
        <item name="android:popupTheme" tools:ignore="NewApi">@style/TitleTheme</item>
        <item name="android:textColor">@color/ef_white</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/ef_white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="LoadingYourScreen">
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowDisablePreview">true</item>-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="DialogCustomerChoose" parent="@style/AppTheme">
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:textColor">@color/blue_100</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogCreateAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="DialogSortAnimation">
        <item name="android:windowEnterAnimation">@anim/right_in</item>
        <item name="android:windowExitAnimation">@anim/right_out</item>
    </style>

    <style name="Month" parent="@style/AppTheme">
        <item name="android:fontFamily">IBM Plex Sans</item>
        <item name="android:textColor">#FF373F3D</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText_Black">
        <item name="android:fontFamily">@font/sanfranciscodisplay_regular</item>
        <item name="android:textColor">#FF0A0F13</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="full_screen_dialog_no_status_bar" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/green_main</item>
    </style>


    <style name="AppTheme.TransparentTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DialogShareAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

