<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="16dp"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/activity_horizontal_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/noimage"
        app:civ_fill_color="@color/green_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUserName"
                style="@style/SF_B_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:text="Nguyen Hong Hanh"
                android:textColor="@color/name_comment" />

            <TextView
                android:id="@+id/txtDate"
                style="@style/SF_R_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:paddingStart="8dp"
                android:singleLine="true"
                android:textColor="@color/black_50" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtContentComment"
            style="@style/SF_R_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:maxLines="5"
            android:paddingEnd="16dp"
            android:paddingTop="3dp"
            android:text="Ã¡dasdasdasdas"
            android:textColor="@color/black_100" />

        <TextView
            android:id="@+id/txtReplyComment"
            style="@style/SF_M_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:paddingEnd="16dp"
            android:text="@string/text_reply_comment"
            android:textColor="@color/text_reply_comment" />
    </LinearLayout>

</LinearLayout>