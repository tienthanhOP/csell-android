<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_contact_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_avatar_contact_friend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_person" />

            <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:paddingTop="2sp">-->

                <!--<ImageView-->
                    <!--android:id="@+id/icon_category_main"-->
                    <!--android:layout_width="12dp"-->
                    <!--android:layout_height="12dp"-->
                    <!--android:background="@drawable/ic_company" />-->

                <!--<ImageView-->
                    <!--android:id="@+id/icon_category_sub"-->
                    <!--android:layout_width="12dp"-->
                    <!--android:layout_height="12dp"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:background="@drawable/ic_sedan" />-->

            <!--</LinearLayout>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="5.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_customer_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Nguyễn Văn A"
                android:textColor="@color/black_100"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_phone_customer_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="01234"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ cuộc gọi của bạn"
                android:textStyle="italic"/>

        </LinearLayout>

        <!--<Button-->
            <!--android:id="@+id/btn_chat_customer_friend"-->
            <!--android:layout_width="24dp"-->
            <!--android:layout_height="24dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:background="@drawable/ic_messenger" />-->

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_gravity="center"
            android:id="@+id/btnAddFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingBottom="5dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            fancy:fb_borderColor="@color/blue_100"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/ef_white"
            fancy:fb_radius="20dp"
            fancy:fb_text="@string/add_friend"
            fancy:fb_textColor="@color/blue_100"
            app:fb_focusColor="@color/gray_50" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_50" />
</LinearLayout>