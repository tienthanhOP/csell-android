<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/shadow_cardview_product"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/shadow_cardview_product">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_category"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_categoryName"
                style="@style/SF_M_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Mercedes"
                android:textColor="@color/text_title_product_product" />

            <ImageView
                android:id="@+id/img_info_project"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_info_project" />

            <ImageView
                android:id="@+id/img_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_dark_blue_24dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
