<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <TextView
        android:id="@+id/txtPropertyName"
        style="@style/SF_R_14"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_content_edit_product" />

    <RelativeLayout
        android:id="@+id/from_spn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:visibility="gone">

        <Spinner
            android:id="@+id/spnPropValue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_grey_border"
            android:padding="4dp"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@id/spnPropValue"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_arrow_drop_down_black" />
    </RelativeLayout>


    <EditText
        android:id="@+id/edtPropertyValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:minHeight="40dp"
        android:singleLine="true"
        android:textColor="@color/text_content_edit_product"
        android:textSize="14sp"
        android:visibility="visible" />

</LinearLayout>