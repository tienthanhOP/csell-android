<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_dialog_notification"
    fancy:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/SF_R_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingVertical="25dp"
            android:text="@string/do_you_want_to_delete_this_product"
            android:textColor="@color/black_75" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnCancel"
                style="@style/SF_M_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="40dp"
                fancy:fb_borderColor="@color/gray_50"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#ffffff"
                fancy:fb_focusColor="@color/gray_50"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="0dp"
                fancy:fb_text="@string/cancel"
                fancy:fb_textColor="@color/dark_blue_100" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnConfirm"
                    style="@style/SF_M_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    fancy:fb_borderColor="@color/gray_50"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="#ffffff"
                    fancy:fb_focusColor="@color/gray_50"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="0dp"
                    fancy:fb_text="@string/agree"
                    fancy:fb_textColor="@color/dark_blue_100" />

                <ProgressBar
                    android:id="@+id/progress_loading"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>