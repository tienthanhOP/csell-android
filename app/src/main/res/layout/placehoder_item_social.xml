<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_100"
        android:orientation="vertical">

        <!--user info-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ef_white"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:background="@color/background_shimmer" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        style="@style/SF_B_14"
                        android:layout_width="200dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/background_shimmer"
                        android:textColor="@color/name_user_social" />

                    <View
                        android:layout_width="100dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/background_shimmer"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--car etc-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:visibility="visible"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="3dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@color/background_shimmer"
                android:orientation="horizontal" />


        </android.support.v7.widget.CardView>

        <!--sim, vu vo-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:visibility="visible"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="3dp">


        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_50" />

        <!-- like,share,comment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:tag="0">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_button_like" />

                <TextView
                    style="@style/SF_B_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:tag="0"
                    android:text="@string/like"
                    android:textColor="@color/text_button_like_share_comment_social" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_button_comment" />

                <TextView
                    style="@style/SF_B_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:background="@android:color/transparent"
                    android:tag="0"
                    android:text="@string/comment"
                    android:textAllCaps="false"
                    android:textColor="@color/text_button_like_share_comment_social" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="end|center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_button_share" />

                <TextView
                    style="@style/SF_B_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:background="@android:color/transparent"
                    android:tag="0"
                    android:text="@string/share"
                    android:textAllCaps="false"
                    android:textColor="@color/text_button_like_share_comment_social" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_50" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_100"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingVertical="10dp"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="0dp"
            android:layout_toRightOf="@id/img_user_comment"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <View
                android:layout_marginEnd="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/background_shimmer"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/SF_M_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/white_100"
                android:hint="@string/input_your_comment"
                android:textColor="@color/text_add_comment_social" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_background_100" />

</LinearLayout>